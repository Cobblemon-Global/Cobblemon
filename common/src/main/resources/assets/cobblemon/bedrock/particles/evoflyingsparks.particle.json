				"texture": "textures/particles/sparkle"
			}
		},
		"curves": {
			"variable.size": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 0.06]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "10 * v.entity_radius",
