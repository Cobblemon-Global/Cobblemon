{
  "escapeAction": "q.dialogue.set_page('quitter')",
  "speakers": {
    "npc": {
      "name": {
        "type": "expression",
        "expression": "q.npc.name"
      },
      "face": "q.npc.face();"
    },
    "player": {
      "face": "q.player.face();",
      "name": {
        "type": "expression",
        "expression": "q.player.username"
      }
    }
  },
  "pages": [
    {
      "id": "player-chat",
      "speaker": "player",
      "lines": [
        {
          "type": "expression",
          "expression": "'Hello, I\\'m ' + q.player.username + '!'"
        }
      ]
    },
    {
      "id": "npc-chat",
      "speaker": "npc",
      "lines": [
        {
          "type": "expression",
          "expression": "'Hello, ' + q.player.username + '! I\\'m ' + q.npc.name + '!'"
        }
      ],
      "input": {
        "type": "option",
        "vertical": false,
        "options": [
          {
            "text": "Battle",
            "value": "battle",
            "action": [
              "q.dialogue.close();",
              "q.npc.battle(q.player);"
            ]
          },
          {
            "text": "Trade",
            "value": "trade",
            "action": [],
            "isSelectable": "false"
          },
          {
            "text": "Cancel",
            "value": "cancel",
            "action": [
              "q.dialogue.close()"
            ]
          }
        ]
      }
    }
  ]
}