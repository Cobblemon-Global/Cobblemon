{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:evosmokeburst",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/obscuringsmoke"
			}
		},
		"curves": {
			"variable.size": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 0.75, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": "100 * v.entity_radius * 1.5"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "1.5 * v.entity_radius * 1.5",
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 1
			},
			"minecraft:particle_initial_speed": "math.random(20,30) * v.entity_radius * 1.5",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "-5 * v.entity_radius * 1.5", 0],
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.3 * variable.size * v.entity_radius * 1.5", "0.3 * variable.size * v.entity_radius * 1.5"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 80,
					"flipbook": {
						"base_UV": [0, 64],
						"size_UV": [16, 16],
						"step_UV": [0, -16],
						"frames_per_second": 6,
						"max_frame": 5
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.08": "#FF86E7FF",
						"0.5": "#FFFFA3A3",
						"0.81": "#FFF8FFCB",
						"1.0": "#FFFFFFFF"
					}
				}
			}
		}
	}
}