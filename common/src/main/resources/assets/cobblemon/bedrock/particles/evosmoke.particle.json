				"direction": "inwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 5
			},
			"minecraft:particle_initial_speed": "7 * v.entity_radius",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.2 * variable.size * v.entity_radius", "0.2 * variable.size * v.entity_radius"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 80,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [16, 16],
						"step_UV": [0, 16],
						"frames_per_second": 2,
						"max_frame": 5
					}
				}
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "variable.colorset",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"1.0": "#FFB7FEFF"
					}
				}
			}
		}
	}
