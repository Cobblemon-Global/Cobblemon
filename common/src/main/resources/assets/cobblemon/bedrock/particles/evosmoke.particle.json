{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:evosmoke",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/obscuringsmoke"
			}
		},
		"curves": {
			"variable.size": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0.2, 0.9, 1]
			},
			"variable.colorset": {
				"type": "linear",
				"input": "v.particle_random_2",
				"horizontal_range": 1,
				"nodes": [0, 1, 0]
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": true
			},
			"minecraft:emitter_rate_instant": {
				"num_particles": "150 * v.entity_radius"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 5
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "math.random(3,3.1) * v.entity_radius",
